{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
       "import/extensions": [
           "error",
           "ignorePackages",
           {
               "ts": "never",
               "js": "never"
           }
       ]
    },
    "settings": {
        "import/resolver": {
            "typescript": {} 
        }
    }
}
